<RobotAction xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation='RobotAction.xsd'
             debugLevel="v" init_vuforia="yes">
    <OpMode id="RED_INSIDE">
        <RECOGNIZE_RINGS>
             <ocv_image_provider>vuforia</ocv_image_provider>
        </RECOGNIZE_RINGS>
        <CLOSE_WEBCAM/>
        <EXECUTE_TARGET_ZONE_STEPS/>
    </OpMode>
    <OpMode id="RED_OUTSIDE">
        <RECOGNIZE_RINGS>
             <ocv_image_provider>vuforia</ocv_image_provider>
        </RECOGNIZE_RINGS>
        <CLOSE_WEBCAM/>
        <EXECUTE_TARGET_ZONE_STEPS/>
    </OpMode>
    <OpMode id="BLUE_INSIDE">
        <RECOGNIZE_RINGS>
             <ocv_image_provider>vuforia</ocv_image_provider>
        </RECOGNIZE_RINGS>
        <CLOSE_WEBCAM/>
        <EXECUTE_TARGET_ZONE_STEPS/>
    </OpMode>
    <OpMode id="BLUE_OUTSIDE">
          <CLOSE_WOBBLE_SERVO></CLOSE_WOBBLE_SERVO>
        <RECOGNIZE_RINGS>
             <ocv_image_provider>vuforia</ocv_image_provider>
        </RECOGNIZE_RINGS>
        <CLOSE_WEBCAM/>
        <EXECUTE_TARGET_ZONE_STEPS/>

    </OpMode>
    <OpMode id="TEST">
          <CLOSE_WOBBLE_SERVO></CLOSE_WOBBLE_SERVO>
          <PLACE_WOBBLE>
               <waitTime>1000</waitTime>
          </PLACE_WOBBLE>
       <!-- <ALIGN_TO_TOWER>
             <ocv_image_provider>vuforia</ocv_image_provider>
        </ALIGN_TO_TOWER>
        <CLOSE_WEBCAM/> -->
            
     </OpMode>
</RobotAction>
